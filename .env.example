# --- Database ---
POSTGRES_PASSWORD=changeme_strong_password

# --- Redis ---
REDIS_PASSWORD=changeme_redis_password

# --- JWT ---
JWT_KEY=changeme_minimum_64_characters_long_random_string_for_hmac_sha512_signing
JWT_ISSUER=eazecad.com
JWT_AUDIENCE=eazecad-client
JWT_ACCESS_EXPIRY=15
JWT_REFRESH_EXPIRY=1

# --- Admin Seed ---
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@eazecad.com
ADMIN_PASSWORD=Admin@123

# --- SMTP Email ---
SMTP_HOST=mail.eazecad.com
SMTP_PORT=587
SMTP_USER=noreply@eazecad.com
SMTP_PASS=changeme_smtp_password
SMTP_FROM_EMAIL=noreply@eazecad.com
SMTP_FROM_NAME=EazeCad
SMTP_ENABLE_SSL=true

# --- Frontend ---
FRONTEND_BASE_URL=http://localhost:3000

# --- CORS ---
# Comma-separated allowed origins for CORS (space-separated for docker-compose array)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
