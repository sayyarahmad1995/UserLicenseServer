{
  "$schema": "https://www.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CacheSettings": {
    "UserExpirationMinutes": 10,
    "UsersListExpirationMinutes": 5
  },
  "ThrottlingSettings": {
    "Global": {
      "ThrottleThreshold": 30,
      "MaxRequestsPerMinute": 60,
      "WindowSeconds": 60,
      "MaxDelayMs": 5000,
      "PenaltySeconds": 600
    },
    "Auth": {
      "ThrottleThreshold": 3,
      "MaxRequestsPerMinute": 5,
      "WindowSeconds": 60,
      "MaxDelayMs": 10000,
      "PenaltySeconds": 300
    },
    "User": {
      "ThrottleThreshold": 60,
      "MaxRequestsPerMinute": 120,
      "WindowSeconds": 60,
      "MaxDelayMs": 3000,
      "PenaltySeconds": 900
    }
  }
}
