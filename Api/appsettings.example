{
  "$schema": "https://www.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;port=5432;Database=localdb;User Id=example;Password=example;TrustServerCertificate=True;",
    "Redis": "localhost:6379,user=admin,password=your-redis-password"
  },
  "SeedData": {
    "AdminUser": {
      "Username": "admin",
      "Email": "admin@example.com",
      "Password": "YourStrongPassword@123",
      "Role": "Admin"
    }
  },
  "Jwt": {
    "Key": "your-secret-key-here-must-be-at-least-64-characters-long-for-hmacsha512!!",
    "Issuer": "localhost",
    "Audience": "localhostClient",
    "AccessTokenExpiryMinutes": "15",
    "RefreshTokenExpiryDays": "30",
    "Roles": [ "Admin", "User", "Manager" ]
  },
  "CacheSettings": {
    "UserExpirationMinutes": 10,
    "UsersListExpirationMinutes": 5
  },
  "ThrottlingSettings": {
    "Global": {
      "ThrottleThreshold": 30,
      "MaxRequestsPerMinute": 60,
      "WindowSeconds": 60,
      "MaxDelayMs": 5000,
      "PenaltySeconds": 600
    },
    "Auth": {
      "ThrottleThreshold": 3,
      "MaxRequestsPerMinute": 5,
      "WindowSeconds": 60,
      "MaxDelayMs": 10000,
      "PenaltySeconds": 300
    },
    "User": {
      "ThrottleThreshold": 60,
      "MaxRequestsPerMinute": 120,
      "WindowSeconds": 60,
      "MaxDelayMs": 3000,
      "PenaltySeconds": 900
    }
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:5173" ]
  }
}
